<div class="border border-bottom border-secondary-subtle shadow-sm">
    <div class="mt-3 mx-5 pb-2">
        <div class="d-flex justify-content-between">
            <h2>Manage Products</h2>
            <img
                style="height: 50px; width: 50px"
                class="rounded-circle"
                src="/assets/images/unnamed.jpg"
                alt="" />
        </div>
    </div>
</div>

<div class="mx-5">
    <a href="/products/add-new" class="add-product mt-4 mb-3 btn btn-rounded btn-success"
        >Add New Item</a
    >
    <div class="row">
        <div class="col-12">
            <table class="table table-striped" id="myTable">
                <thead>
                    <tr style="vertical-align: middle">
                        <th>Photo</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>SKU</th>
                        <th>Stock</th>
                        <th>Reguler Price</th>
                        <th>Sale Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(item => { %>
                        <tr style="vertical-align: middle;">
                            <td>
                                
                                <img
                                    style="height: 50px; width: 50px"
                                    src="/assets/productPhoto/<%= item.featuredPhoto%>"
                                    alt="" />
                            </td>
                            <td><%= item.productName %></td>
                            <td><%= item.category %></td>
                            <td>SK-BD <%= item.sku %></td>
                            <td><%= item.stock %></td>
                            <td> $ <%= item.regulerPrice %></td>
                            <td> $ <%= item.salePrice %></td>
                            <td>
                                <a class="btn btn-success" href="products/single/<%= item.slug %>"><i class="ri-eye-line"></i> View</a>
                                <a class="btn btn-info" href="/products/edit/<%= item.id %>"><i class="ri-edit-line"></i> Edit</a>
                                <a class="btn btn-danger" href="/products/delete/<%= item.id %>"><i class="ri-delete-bin-line""></i> Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
