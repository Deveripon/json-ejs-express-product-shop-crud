<div class="border border-bottom border-secondary-subtle shadow-sm">
    <div class="mt-3 mx-5 pb-2">
        <div class="d-flex justify-content-between">
            <h2><%= product.productName %></h2>
            <img
                style="height: 50px; width: 50px"
                class="rounded-circle"
                src="/assets/images/unnamed.jpg"
                alt="" />
        </div>
    </div>
</div>
<div class="mx-5 mt-2">
    <a href="/products" class="add-product mt-4 mb-3 btn btn-rounded btn-success"
        ><i class="ri-skip-back-line"></i> Back</a
    >
    <div class="row mt-3">
        <div class="col-5">
            <div class="featured-image">
                <img style="height: 80%; width: 80%;"
                    src="/assets/productPhoto/<%= product.featuredPhoto %>"
                    class="rounded"
                    alt="" />
            </div>
            <div class="gallery-images mt-2">
                <% product.galleryImage.forEach(item => { %>
                <img
                    src="/assets/productPhoto/<%= item %>"
                    style="height: 100px; width: 100px; border: 1px solid #d49090"
                    class="rounded"
                    alt="" />

                <% }) %>
            </div>
            </div>
            <div class="col-7">
                <h6 class="category"><%= product.category %></h6>
                <h4 class="product-name" style="font-weight: 400; font-size: 30px">
                    <%= product.productName %>
                </h4>
                <span class="ratings">⭐⭐⭐⭐⭐ (20 Customer Review)</span>
                <div
                    class="group mt-3 d-flex gap-2 align-items-center"
                    style="height: 60px; vertical-align: middle">
                    <h6 class="brand">
                        <img
                            style="height: 50px; width: 80px"
                            src="/assets/images/logo.jpg"
                            alt="" />
                    </h6>
                    <h6 class="stock text-success"><%= product.stock %> available in stock</h6>
                </div>
                <hr />
                <div class="group d-flex gap-4">
                    <span style="color: #aaa"><i class="ri-heart-line mr-3"></i> wishlist</span>
                    <span style="color: #aaa"><i class="ri-repeat-2-line mr-5"></i>compare</span>
                </div>
                <div class="product-features mt-4">
                    <ol style="color: #aaa">
                        <li>Lorem ipsum dolor sit.</li>
                        <li>Lorem, ipsum dolor sit amet consectetur adipisicing elit.</li>
                        <li>Lorem, ipsum dolor sit amet consectetur</li>
                        <li>Lorem, ipsum dolor sit amet consectetur Lorem, ipsum.</li>
                    </ol>
                </div>
                <div class="shipping-note">
                    <p style="color: #aaa">
                        Shipping Note : Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                        Aperiam quam odio voluptas,Lorem ipsum dolor sit amet.
                    </p>
                </div>
                <div class="sku" style="color: #666464; font-weight: 500">
                    <p>SKU : HDDF08 - <%= product.sku %></p>
                </div>
                <div class="group d-flex gap-3 align-items-center">
                    <div class="sale-price">
                        <h6 class="price" style="color: #3bc295; font-size: 45px">
                            <span class="currency">$</span>
                            <%= product.salePrice %>
                        </h6>
                    </div>
                    <div class="reguler-price">
                        <h6
                            class="price"
                            style="color: #afaeae; font-size: 25px; text-decoration: line-through">
                            <span class="currency">$</span>
                           <%= product.regulerPrice %>
                        </h6>
                    </div>
                </div>

                <div class="add-to-cart mt-5">
                    <button class="btn btn-warning">
                        <i class="ri-shopping-cart-line"></i> Add To Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
